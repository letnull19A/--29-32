unit TasksEditUnit;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ExtCtrls, Data.DB, Data.Win.ADODB,
  Vcl.Menus, Vcl.StdCtrls, Vcl.DBCtrls, Vcl.Mask, Global, Vcl.ComCtrls,
  System.ImageList, Vcl.ImgList;

type
  TForm11 = class(TForm)
    Panel2: TPanel;
    MainMenu1: TMainMenu;
    N1: TMenuItem;
    DataSource1: TDataSource;
    ADODataSet1: TADODataSet;
    Label1: TLabel;
    DBNavigator1: TDBNavigator;
    Label2: TLabel;
    Label3: TLabel;
    Label4: TLabel;
    DBComboBox1: TDBComboBox;
    DBComboBox2: TDBComboBox;
    DBComboBox3: TDBComboBox;
    OpenDialog1: TOpenDialog;
    DBText1: TDBText;
    Panel1: TPanel;
    N2: TMenuItem;
    Label5: TLabel;
    ADOQuery1: TADOQuery;
    StatusBar1: TStatusBar;
    DataSource2: TDataSource;
    Label6: TLabel;
    DBText2: TDBText;
    DBComboBox4: TDBComboBox;
    DBImage1: TDBImage;
    procedure N1Click(Sender: TObject);
    procedure ADODataSet1AfterScroll(DataSet: TDataSet);
    procedure N2Click(Sender: TObject);
    procedure DBNavigator1Click(Sender: TObject; Button: TNavigateBtn);
    procedure DBComboBox4Change(Sender: TObject);
    procedure DBImage1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form11: TForm11;

implementation

{$R *.dfm}

uses TasksUnit, MainUnit;

procedure ShowImage(image: string);
begin

  if (Length(image) = 0) then
    image := 'notfound.jpg';

  try
    Form11.DBImage1.Picture.LoadFromFile(ExtractFilePath(Application.ExeName) + IMAGES_PATH + '\' + image);
  except
    ShowMessage('Ошибка в загрузке изображения!');
  end;
end;

procedure TForm11.ADODataSet1AfterScroll(DataSet: TDataSet);
begin
  ShowImage(ADODataSet1.FieldValues['Excitement']);
end;

procedure TForm11.DBComboBox4Change(Sender: TObject);
begin
  ADOQuery1.Active := false;
  ADOQuery1.SQL.Clear();
  ADOQuery1.SQL.add('SELECT * FROM Disciplines WHERE (Id = ' + DBComboBox4.Text + ')');
  ADOQuery1.Active := true;
end;

procedure TForm11.DBImage1Click(Sender: TObject);
var
  nFileName: string;
begin
  OpenDialog1.FileName := '*.jpg';

  if OpenDialog1.Execute then
  begin

    nFileName := ExtractFileName(OpenDialog1.FileName);

    CopyFile(PChar(OpenDialog1.FileName), PChar(IMAGES_PATH + '\' + nFileName), false);
    ShowImage(nFileName);
    ADODataSet1.FieldValues['Excitement'] := nFileName;
  end;
end;

procedure TForm11.DBNavigator1Click(Sender: TObject; Button: TNavigateBtn);
begin
  StatusBar1.Panels[0].Text := 'Запись: ' + IntToStr(ADODataSet1.RecNo);
end;

procedure TForm11.N1Click(Sender: TObject);
begin
  Form3.Show();
  Hide();
end;

procedure TForm11.N2Click(Sender: TObject);
var
  buttonSelected: Integer;
begin
  buttonSelected := MessageDlg('Хотите сохранить изменения?', mtCustom,
    [mbYes, mbCancel], 0);

  if (buttonSelected = mrYes) then
  begin
    ADODataSet1.Post();
  end;

  Hide();
  Form3.Show();
end;

end.
